TOSS_SECRET_KEY=test_sk_zXLkKEypNArWmo50nX3lmeaxYG5R

# ============================================================
# AI API 키 - Claude API 하나로 모든 AI 기능 통합
# ============================================================

# Claude API (필수) ⭐
# AI 리포트 생성 + K-ESG PDF 파싱 + 고지서 OCR 모두 사용
# https://console.anthropic.com 에서 발급
CLAUDE_API_KEY=your_claude_api_key_here

# OpenAI API (선택, 대안용)
# https://platform.openai.com 에서 발급
# OPENAI_API_KEY=your_openai_api_key_here

# ============================================================
# 외부 데이터 API 키 (ESG 데이터 자동 수집)
# ============================================================

# 공공데이터포털 API 키 (필수 권장) ⭐
# 기상청, 한국전력, 고용노동부 등 공공 API 공통 사용
# https://www.data.go.kr 회원가입 후 API 활용 신청
DATA_GO_KR_API_KEY=your_data_go_kr_api_key_here

# DART API 키 (금융감독원 전자공시) ⭐
# 기업 공시정보, 재무제표, 임원현황 조회
# https://opendart.fss.or.kr 에서 발급 (무료)
DART_API_KEY=your_dart_api_key_here

# 통계청 KOSIS API 키
# 산업별 통계, 고용 통계 등 벤치마킹 데이터
# https://kosis.kr/openapi 에서 발급 (무료)
KOSIS_API_KEY=your_kosis_api_key_here

# Carbon Interface API 키
# 탄소 배출량 자동 계산 (전기, 연료, 운송 등)
# https://www.carboninterface.com 에서 발급 (월 200회 무료)
CARBON_INTERFACE_API_KEY=your_carbon_interface_api_key_here

# Google API 키 (Sheets 연동용)
# ESG 데이터 스프레드시트 연동
# https://console.cloud.google.com 에서 발급
GOOGLE_API_KEY=your_google_api_key_here
# OAuth2 인증용 (선택, 쓰기 기능 필요시)
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret

# ============================================================

# 데이터베이스 설정 (실제 서비스용)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=esg_insight
# DB_USER=postgres
# DB_PASSWORD=your_password

# JWT 설정
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=7d

# 이메일 설정 (SendGrid)
# SENDGRID_API_KEY=your_sendgrid_api_key
# EMAIL_FROM=noreply@esginsight.co.kr

# 카카오 알림톡 설정
# KAKAO_API_KEY=your_kakao_api_key
# KAKAO_SENDER_KEY=your_sender_key

# 서비스 URL
CLIENT_URL=http://localhost:3000
SUCCESS_URL=http://localhost:3000/payment/success
FAIL_URL=http://localhost:3000/payment/fail

# 웹훅 시크릿 (토스페이먼츠)
WEBHOOK_SECRET=your_webhook_secret
